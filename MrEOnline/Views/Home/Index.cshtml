                e.preventDefault();
                $('#ChooseLogin').show();
                $('#login').hide();
                $('#banner').hide();
                $('#header').show();
            });
            $('#btnCustomer').on('click', function (e) {
                e.preventDefault();
                $('#login').attr("data-logintype", 'Customer')
                $('#login').show()
                $('#ChooseLogin').hide();

            })
            $('#btnAdmin').on('click', function (e) {
                e.preventDefault();
                $('#login').attr("data-logintype", 'Admin')
                $('#login').show()
                $('#ChooseLogin').hide();

            })
            $('#btnLogin').on('click', function (e) {
                e.preventDefault();
