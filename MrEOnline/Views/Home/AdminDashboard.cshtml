<style>
    /*Style for the Admin Dashbord*/
    .LabelIcons {
        color: white;
        font-family: Abril Fatface;
    }
    #main-block .Icons {
        width: 144px;
        height: 144px;
        line-height: 144px;
        border: 4px solid #fff;
        -webkit-border-radius: 144px;
        border-radius: 14px;
        text-align: center;
        display: block;
        margin: 0 auto 35px;
        font-size: 80px;
        text-shadow: 3px 3px 0 rgba(0,0,0,0.2);
        box-shadow: 3px 3px 0 rgba(0,0,0,0.2)
    }
    #main-block .Icons {
        width: 144px;
        height: 144px;
        line-height: 144px;
        border: 4px solid #000;
        -webkit-border-radius: 144px;
        border-radius: 14px;
        text-align: center;
        display: block;
        margin: 0 auto 35px;
        font-size: 80px;
